CENTER_LAT=47.4502
CENTER_LON=-122.3088
RADIUS_NM=80

PORT=8080
POLL_INTERVAL_MS=5000
ADSBLOL_BASE_URL=https://api.adsb.lol
ADSBLOL_SEARCH_PATH_TEMPLATE=/v2/lat/{lat}/lon/{lon}/dist/{radius}
# Destination route lookup via ADSB.lol routeset API:
# POST /api/0/routeset with body:
# { "planes": [ { "callsign": "SIA327", "lat": 0, "lng": 0 } ] }
ADSBLOL_ROUTESET_PATH=/api/0/routeset/
ADSBLOL_ROUTESET_BATCH_SIZE=50

# Optional AviationWeather QNH settings for /api/qnh
AWX_BASE_URL=https://aviationweather.gov
AWX_METAR_PATH=/api/data/metar
AWX_CACHE_TTL_MS=60000

# Optional weather reflectivity settings for /api/wx/reflectivity
WX_REFLECTIVITY_SAMPLES_URL=https://mapservices.weather.noaa.gov/eventdriven/rest/services/radar/radar_base_reflectivity_time/ImageServer/getSamples
WX_REFLECTIVITY_MAX_CELLS=40000
# Set to 0 or null to disable the max-cells limit.
WX_REFLECTIVITY_REQUEST_CHUNK_SIZE=1000

# Optional SWIM/ITWS ingest settings for POST /api/wx/radar
# Token fallback order for WX ingest: WX_INGEST_TOKEN -> ITWS_INGEST_TOKEN -> TAIS_INGEST_TOKEN
# WX_INGEST_TOKEN=replace-with-random-secret
# ITWS_INGEST_TOKEN=replace-with-random-secret
WX_INGEST_MAX_BYTES=8388608
